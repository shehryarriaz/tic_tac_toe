<h2>tic tac toe... three in a row</h2>
<h4>Log in</h4>
<%= form_tag sessions_path do %>
 <div class="field">
   <%= label_tag :email %>
   <%= text_field_tag :email, params[:email] %>
 </div>
 <div class="field">
   <%= label_tag :password %>
   <%= password_field_tag :password %>
 </div>
 <div class="actions"><%= submit_tag "Log in", :class => "button expand" %></div>
<% end %>

<%= link_to 'Create profile', new_user_path, :class => "button expand" %>